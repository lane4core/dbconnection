# Docker
COMPOSE_FILE=support/docker-compose.yml
COMPOSE_PROJECT_NAME=dbconnection

# PHP
PHP_VERSION=8.3
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=0
PHP_TIMEZONE=UTC
APCU_SHM_SIZE=64M
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_MAX_ACCELERATED_FILES=4000
OPCACHE_REVALIDATE_FREQ=2
PHP_ERROR_REPORTING="E_ALL & ~E_DEPRECATED & ~E_STRICT"
PHP_DISPLAY_ERRORS=Off
PHP_LOG_ERRORS=On

# Xdebug Configuration (Runtime controllable)
XDEBUG_MODE=debug
XDEBUG_START_WITH_REQUEST=yes
XDEBUG_CLIENT_HOST=host.docker.internal
XDEBUG_CLIENT_PORT=9003
XDEBUG_LOG_LEVEL=0

# Database
MYSQL_HOST=mysql
MYSQL_VERSION=8.0
MYSQL_PORT=3306
MYSQL_HOST_PORT=3396
MYSQL_DATABASE=test_db
MYSQL_USER=test_user
MYSQL_PASSWORD=test_password

MARIADB_HOST=mariadb
MARIADB_VERSION=11.2
MARIADB_PORT=3306
MARIADB_HOST_PORT=3397
MARIADB_DATABASE=test_db
MARIADB_USER=test_user
MARIADB_PASSWORD=test_password

POSTGRES_HOST=postgres
POSTGRES_VERSION=16
POSTGRES_PORT=5432
POSTGRES_HOST_PORT=5499
POSTGRES_DATABASE=test_db
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password
