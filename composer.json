{
  "name": "lane4core/dbconnection",
  "description": "DbConnection is a factory to create PDO database connections and delivers a professional PDO connection wrapper.",
  "version": "1.0.1",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Development Core",
      "email": "devcore@lane4.digital"
    }
  ],
  "require": {
    "php": ">=8.1",
    "lane4core/contract": "^1.0",
    "lane4core/dotenv": "^1.0",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^2.0.4",
    "squizlabs/php_codesniffer": "^3.11.2"
  },
  "autoload": {
    "psr-4": {
      "Lane4core\\DbConnection\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lane4core\\DbConnection\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "echo '#!/usr/bin/env bash' > .git/hooks/pre-commit",
      "echo 'bash ./support/pre-commit-hook.sh' >> .git/hooks/pre-commit",
      "chmod +x .git/hooks/pre-commit"
    ]
  },
  "homepage": "https://github.com/Lane4core/dbconnection",
  "support": {
    "issues": "https://github.com/Lane4core/dbconnection/issues",
    "email": "devcore@lane4.digital"
  },
  "keywords": ["database", "connection", "pdo", "domain driven design", "Lane4 Digitial", "Lane4Core"]
}
